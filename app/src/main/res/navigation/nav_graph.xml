<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:id="@+id/nav_graph"
    app:startDestination="@id/arFragment">
    <fragment
        android:id="@+id/arFragment"
        android:name="com.infinity.roometric.views.ArFragment"
        android:label="ArFragment" >
        <action
            android:id="@+id/action_arFragment_to_sceneViewFragment"
            app:destination="@id/sceneViewFragment" />
        <action
            android:id="@+id/action_arFragment_to_estimateFragment"
            app:destination="@id/estimateFragment" />
    </fragment>
    <fragment
        android:id="@+id/sceneViewFragment"
        android:name="com.infinity.roometric.views.SceneViewFragment"
        android:label="SceneViewFragment" />
    <fragment
        android:id="@+id/estimateFragment"
        android:name="com.infinity.roometric.views.EstimateFragment"
        android:label="EstimateFragment" >
        <action
            android:id="@+id/action_estimateFragment_to_arFragment"
            app:destination="@id/arFragment" />
    </fragment>
</navigation>
