<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/colorBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:background="?android:attr/colorBackground">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Material and Tools Estimates"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="?attr/colorPrimary"
            android:gravity="center"
            android:layout_marginBottom="24dp" />

        <!-- Floor Materials Section -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardElevation="2dp"
            app:cardCornerRadius="12dp"
            app:strokeWidth="1dp"
            app:strokeColor="?attr/colorPrimary">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Floor Materials and Tools"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="?attr/colorPrimary"
            android:layout_marginBottom="12dp" />

        <!-- Tiles Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tiles"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="?android:attr/textColorPrimary"
            android:drawableStart="@android:drawable/ic_menu_gallery"
            android:drawableTint="?attr/colorPrimary"
            android:drawablePadding="8dp"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/tvTileQuantity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="• Tile Quantity: 0 Tiles"
            android:textSize="14sp"
            android:textColor="?android:attr/textColorSecondary"
            android:layout_marginStart="32dp"
            android:layout_marginBottom="8dp" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/layoutTileSize"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Tile Size"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">

            <AutoCompleteTextView
                android:id="@+id/autoCompleteTileSizeEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="none"
                android:focusable="false"
                android:clickable="true"
                android:cursorVisible="false"
                android:textSize="14sp" />

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/tvTilePrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="• Price Estimate: ₱0 - ₱0"
            android:textSize="14sp"
            android:textColor="#1B5E20"
            android:textStyle="bold"
            android:layout_marginStart="32dp"
            android:layout_marginBottom="16dp" />

        <!-- Cement Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cement"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="?android:attr/textColorPrimary"
            android:drawableStart="@android:drawable/ic_menu_compass"
            android:drawableTint="?attr/colorPrimary"
            android:drawablePadding="8dp"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/tvCementQuantity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="• Cement Quantity: 0 kg"
            android:textSize="14sp"
            android:textColor="?android:attr/textColorSecondary"
            android:layout_marginStart="32dp"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/tvCementPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="• Price Estimate: ₱0 - ₱0"
            android:textSize="14sp"
            android:textColor="#1B5E20"
            android:textStyle="bold"
            android:layout_marginStart="32dp"
            android:layout_marginBottom="16dp" />

        <!-- Trowel Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Trowel"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="?android:attr/textColorPrimary"
            android:drawableStart="@android:drawable/ic_menu_manage"
            android:drawableTint="?attr/colorPrimary"
            android:drawablePadding="8dp"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/tvTrowelQuantity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="• Trowel Quantity: 0 Piece"
            android:textSize="14sp"
            android:textColor="?android:attr/textColorSecondary"
            android:layout_marginStart="32dp"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/tvTrowelPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="• Price Estimate: ₱0 - ₱0"
            android:textSize="14sp"
            android:textColor="#1B5E20"
            android:textStyle="bold"
            android:layout_marginStart="32dp"
            android:layout_marginBottom="16dp" />

        <!-- Floor Total -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E0E0E0"
            android:layout_marginVertical="8dp" />

        <TextView
            android:id="@+id/tvFloorTotal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Total Cost Estimate: ₱0 - ₱0"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="?attr/colorPrimary"
            android:gravity="end"
            android:layout_marginTop="8dp" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Wall Materials Section -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardElevation="2dp"
            app:cardCornerRadius="12dp"
            app:strokeWidth="1dp"
            app:strokeColor="?attr/colorPrimary">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Wall Materials and Tools"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="?attr/colorPrimary"
            android:layout_marginBottom="12dp" />

        <!-- Paint Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Paint"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="?android:attr/textColorPrimary"
            android:drawableStart="@android:drawable/ic_menu_edit"
            android:drawableTint="?attr/colorPrimary"
            android:drawablePadding="8dp"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/tvPaintQuantity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="• Paint Quantity: 0 Liter"
            android:textSize="14sp"
            android:textColor="?android:attr/textColorSecondary"
            android:layout_marginStart="32dp"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/tvPaintPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="• Price Estimate: ₱0 - ₱0"
            android:textSize="14sp"
            android:textColor="#1B5E20"
            android:textStyle="bold"
            android:layout_marginStart="32dp"
            android:layout_marginBottom="16dp" />

        <!-- Paintbrush Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Paintbrush"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="?android:attr/textColorPrimary"
            android:drawableStart="@android:drawable/ic_menu_edit"
            android:drawableTint="?attr/colorPrimary"
            android:drawablePadding="8dp"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/tvPaintbrushQuantity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="• Paintbrush Quantity: 0 Piece"
            android:textSize="14sp"
            android:textColor="?android:attr/textColorSecondary"
            android:layout_marginStart="32dp"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/tvPaintbrushPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="• Price Estimate: ₱0 - ₱0"
            android:textSize="14sp"
            android:textColor="#1B5E20"
            android:textStyle="bold"
            android:layout_marginStart="32dp"
            android:layout_marginBottom="16dp" />

        <!-- Wall Total -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E0E0E0"
            android:layout_marginVertical="8dp" />

        <TextView
            android:id="@+id/tvWallTotal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Total Cost Estimate: ₱0 - ₱0"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="?attr/colorPrimary"
            android:gravity="end"
            android:layout_marginTop="8dp" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Overall Total -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardElevation="4dp"
            app:cardCornerRadius="12dp"
            app:cardBackgroundColor="?attr/colorPrimary">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Overall Total"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:alpha="0.9"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/tvOverallTotal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="₱0 - ₱0"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Note -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardElevation="0dp"
            app:cardCornerRadius="8dp"
            app:cardBackgroundColor="#F5F5F5">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Important Notes"
            android:textSize="13sp"
            android:textStyle="bold"
            android:textColor="?android:attr/textColorPrimary"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/tvNote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="• Prices may vary by store and time\n• Tiles include +10% waste allowance\n• Paint includes +15% waste allowance"
            android:textSize="12sp"
            android:textColor="?android:attr/textColorSecondary"
            android:lineSpacingExtra="2dp" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end">

            <Button
                android:id="@+id/btnCancelEstimate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cancel"
                android:layout_marginEnd="8dp"
                style="@style/Widget.MaterialComponents.Button.TextButton" />

            <Button
                android:id="@+id/btnDoneEstimate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Done"
                style="@style/Widget.MaterialComponents.Button" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>